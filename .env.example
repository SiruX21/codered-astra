# ===================================
# DOCKER COMPOSE ENVIRONMENT VARIABLES
# ===================================
# Copy this file to .env and fill in your actual values

# ===================================
# DATABASE CONFIGURATION
# ===================================
DB_ROOT_PASSWORD=rootpassword
DB_NAME=fursona_db
DB_USER=fursonauser
DB_PASSWORD=fursonapass
DB_PORT=3306

# ===================================
# BACKEND CONFIGURATION
# ===================================
NODE_ENV=production
BACKEND_PORT=3001

# JWT Secret (generate a secure random string)
# You can use: openssl rand -base64 32
JWT_SECRET=your_jwt_secret_key_change_this_in_production

# ===================================
# STRIPE CONFIGURATION
# ===================================
# Get these from: https://dashboard.stripe.com/test/apikeys
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Stripe Product Price IDs (create these in Stripe Dashboard)
BASIC_PLAN_PRICE_ID=price_basic_monthly
PRO_PLAN_PRICE_ID=price_pro_monthly

# ===================================
# AI/LLM CONFIGURATION
# ===================================
# LLM Provider: 'gemini' (recommended) or 'openai'
LLM_PROVIDER=gemini

# Google Gemini API Key
# Get from: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# OpenAI API Key (only needed if LLM_PROVIDER=openai)
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your_openai_api_key

# ===================================
# FRONTEND CONFIGURATION
# ===================================
FRONTEND_PORT=3000

# Frontend URL (used by backend for redirects)
FRONTEND_URL=http://localhost:3000

# API URL (for frontend to call backend)
VITE_API_URL=http://localhost:3001/api

# Get from: https://dashboard.stripe.com/test/apikeys
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key

# ===================================
# CORS CONFIGURATION
# ===================================
# Comma-separated list of allowed origins
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# ===================================
# PRODUCTION NOTES
# ===================================
# For production deployment:
# 1. Change all secrets to secure random values
# 2. Update URLs to your domain
# 3. Use production Stripe keys (pk_live_... and sk_live_...)
# 4. Set NODE_ENV=production
# 5. Enable HTTPS/SSL
# 6. Update ALLOWED_ORIGINS to your production domain
